<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="2dp"
        android:layout_gravity="center"
        app:cardElevation="5dp"
        android:backgroundTint="?android:attr/colorControlHighlight"
        android:layout_marginTop="@dimen/cardview_default_elevation"
        android:elevation="0dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txtNombres"
                    style="@style/CuadroTextoStandar"
                    android:text="Nombres"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <TextView
                    android:text="Edad"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/CuadroTextoStandar"
                    android:id="@+id/txtEdad"
                    android:layout_weight="1" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/txtApellidos"
                    style="@style/CuadroTextoResaltado"
                    android:text="Apellidos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <TextView
                    android:text="Distrito"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/CuadroTextoResaltado"
                    android:id="@+id/txtDistrito"
                    android:layout_weight="1" />
            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>


</RelativeLayout>